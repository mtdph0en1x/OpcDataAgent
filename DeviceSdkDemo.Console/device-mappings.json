{
  "OpcServers": [
    {
      "Name": "LocalOpcServer",
      "Url": "opc.tcp://localhost:4840",
      "SecurityPolicy": "None",
      "ConnectionTimeout": 30000,
      "SessionTimeout": 60000
    }
  ],
  "ProductionLines": [
    {
      "LineId": "ProductionLine1",
      "Name": "Primary Assembly Line",
      "OpcServerName": "LocalOpcServer",
      "DefaultSamplingInterval": "00:00:02",
      "Devices": [
        {
          "DeviceId": "Device1",
          "DeviceName": "Device 1",
          "DeviceType": "Processor",
          "Enabled": true,
          "SamplingInterval": "00:00:02",
          "NodePrefix": "Device 1",
          "Sensors": [
            {
              "SensorName": "Temperature",
              "NodePath": "Temperature",
              "DataType": "double",
              "Unit": "°C",
              "AlertThresholds": {
                "Warning": 80.0,
                "Critical": 90.0
              },
              "AlertDirection": "above"
            },
            {
              "SensorName": "ProductionRate",
              "NodePath": "ProductionRate",
              "DataType": "int",
              "Unit": "units/hr",
              "AlertThresholds": {
                "Warning": 50,
                "Critical": 30
              },
              "AlertDirection": "below"
            },
            {
              "SensorName": "DeviceError",
